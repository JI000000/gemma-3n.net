---
interface Props {
  title: string;
  description: string;
  logoSrc: string; // URL or path to the logo
  officialLink: string;
  tutorialLink?: string; // Optional link to our tutorial
}

const { title, description, logoSrc, officialLink, tutorialLink } = Astro.props;
---
<div class="bg-white dark:bg-slate-800 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out p-6 flex flex-col h-full">
  <div class="flex items-center mb-4">
    <img src={logoSrc} alt={`${title} logo`} class="h-12 w-12 mr-4 object-contain"/>
    <h3 class="text-2xl font-bold text-slate-900 dark:text-white">{title}</h3>
  </div>
  <p class="text-slate-600 dark:text-gray-300 mb-6 flex-grow">
    {description}
  </p>
  <div class="mt-auto flex flex-wrap gap-2">
    <a href={officialLink} target="_blank" rel="noopener noreferrer" class="inline-block px-4 py-2 text-sm font-semibold text-white bg-blue-600 rounded-md hover:bg-blue-700 transition-colors">
      Official Site &rarr;
    </a>
    {tutorialLink && (
      <a href={tutorialLink} class="inline-block px-4 py-2 text-sm font-semibold text-blue-800 dark:text-blue-300 bg-blue-100 dark:bg-blue-900 rounded-md hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors">
        Our Tutorial
      </a>
    )}
  </div>
</div> 