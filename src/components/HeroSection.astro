---
import { getLangFromUrl, useTranslations } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="flex flex-col items-center justify-center h-screen text-center pt-16 bg-white dark:bg-slate-900">
  <div class="max-w-3xl px-4">
    <h1 class="text-5xl font-bold md:text-7xl text-slate-900 dark:text-white">
      {t('hero.title')}
    </h1>
    <h2 class="mt-4 text-xl md:text-2xl text-slate-600 dark:text-gray-400">
      {t('hero.subtitle')}
    </h2>
    <a href="#what-is-gemma" class="inline-block px-8 py-4 mt-8 font-bold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors">
      {t('hero.cta.primary')}
    </a>
  </div>
</section> 