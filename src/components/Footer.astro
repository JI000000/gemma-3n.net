    <NewsletterSignup />
    <div class="mt-12 text-center text-slate-600 dark:text-gray-400">
      <p>&copy; 2025 Gemma-3n.net. {t('footer.rights')}</p>
      <p class="mt-2 text-sm">{t('footer.independent')}</p>
    </div>
  </div>
</footer> 