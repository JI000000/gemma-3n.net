---
import ThemeToggleButton from './ThemeToggleButton.astro';

const navLinks = [
  { href: "/#what-is-gemma", text: "About" },
  { href: "/#benchmarks", text: "Benchmarks" },
  { href: "/blog", text: "Blog" },
  { href: "/#resources", text: "Resources" },
  { href: "/#faq", text: "FAQ" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="text-xl font-bold text-slate-900 dark:text-white">Gemma-3n.net</a>
      <div class="flex items-center space-x-8">
        <nav class="hidden md:flex items-center gap-6">
          <a href="/#about" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">About</a>
          <a href="/#benchmarks" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Benchmarks</a>
          <a href="/blog" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Blog</a>
          <a href="/toolkit" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Toolkit</a>
          <a href="/#resources" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Resources</a>
          <a href="/#faq" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">FAQ</a>
        </nav>
        <ThemeToggleButton />
      </div>
      <!-- Mobile menu button can be added later -->
    </div>
  </div>
</header> 