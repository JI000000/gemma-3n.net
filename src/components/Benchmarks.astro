---
import { getLangFromUrl, useTranslations } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="benchmarks" class="py-20 sm:py-32 bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-white sm:text-4xl mb-4">{t('benchmarks.heading')}</h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-gray-400">{t('benchmarks.subtitle')}</p>
      <p class="mt-2 text-sm text-slate-500 dark:text-gray-500">{t('benchmarks.source')}</p>
    </div>
    
    <!-- Main Performance Cards -->
    <div class="mt-16 grid gap-8 grid-cols-1 lg:grid-cols-3">
      <!-- Benchmark Card 1: MMLU -->
      <div class="group relative p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-200 dark:border-gray-700 overflow-hidden">
        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-purple-600/5 dark:from-blue-400/10 dark:to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Icon -->
        <div class="relative mb-4 flex justify-center">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center text-white text-2xl font-bold shadow-lg">
            🧠
          </div>
        </div>
        
        <div class="relative text-center">
          <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t('benchmarks.mmlu.title')}</h3>
          <p class="mt-2 text-slate-600 dark:text-gray-400 text-sm">{t('benchmarks.mmlu.desc')}</p>
          
          <!-- Progress Ring -->
          <div class="mt-6 relative flex items-center justify-center">
            <svg class="w-32 h-32 transform -rotate-90" viewBox="0 0 128 128">
              <!-- Background circle -->
              <circle cx="64" cy="64" r="56" fill="none" stroke="currentColor" stroke-width="8" class="text-gray-200 dark:text-gray-700"/>
              <!-- Progress circle -->
              <circle cx="64" cy="64" r="56" fill="none" stroke="url(#gradient1)" stroke-width="8" stroke-linecap="round" 
                      stroke-dasharray="351.86" stroke-dashoffset="70.37" class="transition-all duration-1000"/>
              <defs>
                <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#3B82F6"/>
                  <stop offset="100%" style="stop-color:#1D4ED8"/>
                </linearGradient>
              </defs>
            </svg>
            <div class="absolute text-center">
              <div class="text-4xl font-bold text-blue-600 dark:text-blue-400">79.8%</div>
              <div class="text-sm text-slate-500 dark:text-gray-400">{t('benchmarks.score')}</div>
            </div>
          </div>
          
          <p class="mt-2 text-lg font-semibold text-slate-900 dark:text-white">{t('benchmarks.gemma_e4b')}</p>
          <p class="mt-4 text-slate-500 dark:text-gray-500 text-sm leading-relaxed">{t('benchmarks.mmlu.note')}</p>
        </div>
      </div>
      
      <!-- Benchmark Card 2: LMArena -->
      <div class="group relative p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-200 dark:border-gray-700 overflow-hidden">
        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-emerald-600/5 dark:from-green-400/10 dark:to-emerald-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Icon -->
        <div class="relative mb-4 flex justify-center">
          <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center text-white text-2xl font-bold shadow-lg">
            💬
          </div>
        </div>
        
        <div class="relative text-center">
          <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t('benchmarks.lmarena.title')}</h3>
          <p class="mt-2 text-slate-600 dark:text-gray-400 text-sm">{t('benchmarks.lmarena.desc')}</p>
          
          <!-- Score Display -->
          <div class="mt-6 relative">
            <div class="text-5xl font-bold text-green-600 dark:text-green-400 mb-2">1315</div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 mb-4">
              <div class="bg-gradient-to-r from-green-500 to-emerald-600 h-3 rounded-full transition-all duration-1000" style="width: 87.7%"></div>
            </div>
            <div class="text-sm text-slate-500 dark:text-gray-400">87.7% {t('benchmarks.lmarena.max')}</div>
          </div>
          
          <p class="mt-2 text-lg font-semibold text-slate-900 dark:text-white">{t('benchmarks.gemma_e4b')}</p>
          <p class="mt-4 text-slate-500 dark:text-gray-500 text-sm leading-relaxed">{t('benchmarks.lmarena.note')}</p>
        </div>
      </div>

      <!-- Benchmark Card 3: Vision Speed -->
      <div class="group relative p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-200 dark:border-gray-700 overflow-hidden">
        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-pink-600/5 dark:from-purple-400/10 dark:to-pink-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Icon -->
        <div class="relative mb-4 flex justify-center">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-xl flex items-center justify-center text-white text-2xl font-bold shadow-lg">
            ⚡
          </div>
        </div>
        
        <div class="relative text-center">
          <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t('benchmarks.vision.title')}</h3>
          <p class="mt-2 text-slate-600 dark:text-gray-400 text-sm">{t('benchmarks.vision.desc')}</p>
          
          <!-- Speed Indicator -->
          <div class="mt-6 relative flex items-center justify-center">
            <div class="relative w-32 h-32 rounded-full bg-gradient-to-br from-purple-100 to-pink-100 dark:from-purple-900/30 dark:to-pink-900/30 flex items-center justify-center">
              <div class="text-center">
                <div class="text-5xl font-bold text-purple-600 dark:text-purple-400">13x</div>
                <div class="text-sm text-slate-500 dark:text-gray-400 mt-1">{t('benchmarks.vision.faster')}</div>
              </div>
              <!-- Animated rings -->
              <div class="absolute inset-0 rounded-full border-4 border-purple-300 dark:border-purple-600 animate-ping opacity-30"></div>
              <div class="absolute inset-2 rounded-full border-2 border-purple-400 dark:border-purple-500 animate-pulse"></div>
            </div>
          </div>
          
          <p class="mt-2 text-lg font-semibold text-slate-900 dark:text-white">{t('benchmarks.vision.compare')}</p>
          <p class="mt-4 text-slate-500 dark:text-gray-500 text-sm leading-relaxed">{t('benchmarks.vision.note')}</p>
        </div>
      </div>
    </div>

    <!-- Comparison Table -->
    <div class="mt-20">
      <h3 class="text-2xl font-bold text-center text-slate-900 dark:text-white mb-8">{t('benchmarks.table.title')}</h3>
      <div class="overflow-x-auto rounded-2xl shadow-lg">
        <table class="w-full bg-white dark:bg-gray-800 rounded-2xl">
          <thead class="bg-gradient-to-r from-slate-50 to-slate-100 dark:from-gray-700 dark:to-gray-800">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-600 dark:text-gray-300 uppercase tracking-wider rounded-tl-2xl">{t('benchmarks.table.model')}</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-600 dark:text-gray-300 uppercase tracking-wider">{t('benchmarks.table.params')}</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-600 dark:text-gray-300 uppercase tracking-wider">{t('benchmarks.table.mmlu')}</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-600 dark:text-gray-300 uppercase tracking-wider">{t('benchmarks.table.gsm8k')}</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-600 dark:text-gray-300 uppercase tracking-wider">{t('benchmarks.table.humaneval')}</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-600 dark:text-gray-300 uppercase tracking-wider rounded-tr-2xl">{t('benchmarks.table.memory')}</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-600">
            <tr class="bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 hover:from-blue-100 hover:to-blue-200 dark:hover:from-blue-800/30 dark:hover:to-blue-700/30 transition-all duration-200">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 dark:text-white flex items-center">
                <span class="w-3 h-3 bg-blue-500 rounded-full mr-3"></span>
                {t('benchmarks.gemma_e4b')}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300 font-medium">4.0B</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 dark:text-green-400 font-bold">79.8%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 dark:text-green-400 font-bold">68.6%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 dark:text-green-400 font-bold">40.2%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 dark:text-green-400 font-bold">8</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-all duration-200">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white flex items-center">
                <span class="w-3 h-3 bg-gray-400 rounded-full mr-3"></span>
                {t('benchmarks.gemma_e2b')}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">2.0B</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">71.3%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">51.8%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">32.1%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 dark:text-green-400 font-semibold">4</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-all duration-200">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white flex items-center">
                <span class="w-3 h-3 bg-red-400 rounded-full mr-3"></span>
                {t('benchmarks.llama_3_8b')}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">8.0B</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 dark:text-red-400 font-medium">66.7%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">84.5%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">72.6%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 dark:text-red-400 font-medium">16</td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-all duration-200">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white flex items-center">
                <span class="w-3 h-3 bg-orange-400 rounded-full mr-3"></span>
                {t('benchmarks.llama_3_3b')}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">3.0B</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 dark:text-red-400 font-medium">63.4%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">77.7%</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">N/A</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">6</td>
            </tr>
          </tbody>
        </table>
      </div>
      <p class="mt-4 text-sm text-slate-500 dark:text-gray-500 text-center">
        <span class="inline-flex items-center mr-4">
          <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
          {t('benchmarks.tag.superior')}
        </span>
        <span class="inline-flex items-center">
          <span class="w-3 h-3 bg-red-500 rounded-full mr-2"></span>
          {t('benchmarks.tag.below')}
        </span>
        {t('benchmarks.memory.note')}
      </p>
    </div>

    <!-- Performance Insights -->
    <div class="mt-16 grid gap-6 grid-cols-1 md:grid-cols-2">
      <div class="group p-6 bg-gradient-to-br from-blue-50 via-blue-100 to-indigo-100 dark:from-blue-900/20 dark:via-blue-800/20 dark:to-indigo-900/20 rounded-2xl border border-blue-200 dark:border-blue-800 hover:shadow-lg transition-all duration-300">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center text-white text-xl">
            🏆
          </div>
          <div>
            <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-3">{t('benchmarks.efficiency_champion_title')}</h4>
            <p class="text-slate-600 dark:text-gray-400">
              {t('benchmarks.efficiency_champion')}
            </p>
          </div>
        </div>
      </div>
      <div class="group p-6 bg-gradient-to-br from-green-50 via-green-100 to-emerald-100 dark:from-green-900/20 dark:via-green-800/20 dark:to-emerald-900/20 rounded-2xl border border-green-200 dark:border-green-800 hover:shadow-lg transition-all duration-300">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center text-white text-xl">
            📱
          </div>
          <div>
            <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-3">{t('benchmarks.mobile_first_design_title')}</h4>
            <p class="text-slate-600 dark:text-gray-400">
              {t('benchmarks.mobile_first_design')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
  }
  
  .group:hover .animate-float {
    animation: float 2s ease-in-out infinite;
  }
</style> 