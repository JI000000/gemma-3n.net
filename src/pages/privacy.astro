---
import MainLayout from '../layouts/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<MainLayout title={t('privacy.title')} description={t('privacy.p1')}>
  <div class="pt-20">
    <main class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg dark:prose-invert mx-auto">
        <h1>{t('privacy.h1')}</h1>
        <p class="lead"><em>{t('privacy.effective_date')}</em></p>
        <p>{t('privacy.p1')}</p>
        
        <h2>{t('privacy.h2_info')}</h2>
        <p>{t('privacy.p2')}</p>
        <h3>{t('privacy.h3_personal')}</h3>
        <p>{t('privacy.p3')}</p>
        <h3>{t('privacy.h3_analytics')}</h3>
        <p>{t('privacy.p4')}</p>

        <h2>{t('privacy.h2_use')}</h2>
        <p>{t('privacy.p5')}</p>

        <h2>{t('privacy.h2_security')}</h2>
        <p>{t('privacy.p6')}</p>

        <h2>{t('privacy.h2_contact')}</h2>
        <p>{t('privacy.p7')}</p>
      </div>
    </main>
  </div>
</MainLayout>