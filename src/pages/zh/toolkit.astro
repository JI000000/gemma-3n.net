            <p class="text-slate-600 dark:text-gray-400">{t('toolkit.hardware.features.gpu.desc')}</p>
          </div>
          <div class="text-center p-6 bg-purple-50 dark:bg-purple-900/20 rounded-lg">
            <div class="text-2xl font-bold text-purple-600 dark:text-purple-400 mb-2">{t('toolkit.hardware.features.mobile.title')}</div>
            <p class="text-slate-600 dark:text-gray-400">{t('toolkit.hardware.features.mobile.desc')}</p>
          </div>
        </div>
      </div>
    </section>

