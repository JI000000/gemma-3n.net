              </li>
            </ul>
            
            <div class="bg-gray-900 rounded-lg p-4 mb-4">
              <code class="text-green-400 text-sm">
                {t('toolkit.platform.ios.code')}
              </code>
            </div>
            
            <a href="/zh/tutorials/gemma-3n-ios-deployment" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
              {t('toolkit.platform.ios.link')}
            </a>
          </div>

          <!-- Fine-tuning Tools -->
          <div class="p-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
