---
import MainLayout from '../../layouts/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout 
  title={t('toolkit.title')}
  description={t('toolkit.description')}
>
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/20">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-slate-900 dark:text-white mb-6">
          {t('toolkit.h1')}
        </h1>
        <p class="text-xl text-slate-600 dark:text-gray-400 mb-8">
          {t('toolkit.subheading')}
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <span class="px-4 py-2 bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium">{t('toolkit.tag1')}</span>
          <span class="px-4 py-2 bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-200 rounded-full text-sm font-medium">{t('toolkit.tag2')}</span>
          <span class="px-4 py-2 bg-purple-100 dark:bg-purple-900/50 text-purple-800 dark:text-purple-200 rounded-full text-sm font-medium">{t('toolkit.tag3')}</span>
        </div>
      </div>
    </section>

    <!-- Quick Start Section -->
    <section class="py-20 bg-white dark:bg-slate-900">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-slate-900 dark:text-white mb-12">{t('toolkit.quickstart.title')}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Ollama Integration -->
          <div class="p-6 bg-slate-50 dark:bg-gray-800 rounded-lg hover:shadow-lg transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center text-white font-bold text-xl mr-4">
                O
              </div>
              <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t('toolkit.quickstart.ollama.title')}</h3>
            </div>
            <p class="text-slate-600 dark:text-gray-400 mb-4">{t('toolkit.quickstart.ollama.desc')}</p>
            <div class="bg-gray-900 rounded-lg p-4 mb-4">
              <code class="text-green-400 text-sm">
                {t('toolkit.quickstart.ollama.code')}
              </code>
            </div>
            <a href="/zh/blog/how-to-run-gemma-3n-with-ollama" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
              {t('toolkit.quickstart.ollama.link')}
            </a>
          </div>

          <!-- Hugging Face Integration -->
          <div class="p-6 bg-slate-50 dark:bg-gray-800 rounded-lg hover:shadow-lg transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-yellow-500 rounded-lg flex items-center justify-center text-white font-bold text-xl mr-4">
                ü§ó
              </div>
              <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t('toolkit.quickstart.hf.title')}</h3>
            </div>
            <p class="text-slate-600 dark:text-gray-400 mb-4">{t('toolkit.quickstart.hf.desc')}</p>
            <div class="bg-gray-900 rounded-lg p-4 mb-4">
              <code class="text-green-400 text-sm">
                {t('toolkit.quickstart.hf.code')}
              </code>
            </div>
            <a href="https://huggingface.co/models?search=gemma%203n" target="_blank" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
