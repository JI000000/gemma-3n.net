---
import MainLayout from '../../layouts/MainLayout.astro';
import WhatIsGemma from '../../components/WhatIsGemma.astro';
import Architecture from '../../components/Architecture.astro';
import UseCases from '../../components/UseCases.astro';
---

<MainLayout 
  title="关于 Gemma 3n"
  description="了解Gemma 3n，谷歌的下一代设备端AI模型。探索其架构、功能以及独特之处。"
>
  <main class="pt-24 sm:pt-32">
    <div class="max-w-4xl mx-auto px-4">
      <header class="text-center mb-16">
        <h1 class="text-4xl font-bold text-slate-900 dark:text-white sm:text-5xl !leading-tight">
          关于 Gemma 3n
        </h1>
        <p class="mt-4 text-xl text-slate-600 dark:text-gray-400">
          谷歌最高效的设备端AI开源模型终极指南。
        </p>
      </header>

      <!-- All components here should already have i18n support -->
      <div class="space-y-20">
        <WhatIsGemma />
        <Architecture />
        <UseCases />
      </div>

      <!-- Call to Action -->
      <section class="mt-20 py-16 text-center bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl">
        <div class="max-w-2xl mx-auto px-4">
          <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">准备好深入探索了吗？</h2>
          <p class="text-slate-600 dark:text-gray-400 mb-8">
            浏览我们的教程，查看开发者工具箱，或通过交互式Demo开始构建。
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/zh/blog" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
              浏览教程
            </a>
            <a href="/zh/demo" class="border-2 border-blue-600 text-blue-600 dark:border-blue-400 dark:text-blue-400 hover:bg-blue-600 hover:text-white dark:hover:bg-blue-400 dark:hover:text-slate-900 px-6 py-3 rounded-lg font-medium transition-colors">
              试用Demo
            </a>
          </div>
        </div>
      </section>
    </div>
  </main>
</MainLayout> 