---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
  description?: string;
}

const { 
  title, 
  description = "The ultimate developer guide and tutorials for Google's Gemma 3n. Master on-device multimodal AI with in-depth analysis, benchmarks, and code examples." 
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{`${title} | Gemma-3n.net`}</title>

    <!-- SEO & Social Sharing -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={Astro.url.href}>
    <meta property="og:title" content={`${title} | Gemma-3n.net`}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={`https://via.placeholder.com/1200x630.png?text=${encodeURIComponent(title)}`}>
    <meta property="og:site_name" content="Gemma-3n.net">
    
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={Astro.url.href}>
    <meta property="twitter:title" content={`${title} | Gemma-3n.net`}>
    <meta property="twitter:description" content={description}>
    <meta property="twitter:image" content={`https://via.placeholder.com/1200x630.png?text=${encodeURIComponent(title)}`}>

    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-LFF5X9VMHP"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-LFF5X9VMHP');
    </script>

    <!-- Google AdSense -->
    <meta name="google-adsense-account" content="ca-pub-9751155071098091">
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9751155071098091"
     crossorigin="anonymous"></script>

    <script is:inline>
      // This script is inlined in the head to prevent FOUC.
      if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
	</head>
	<body class="bg-slate-50 dark:bg-gray-900 text-slate-800 dark:text-gray-200 antialiased">
    <Header />
		<slot />
    <Footer />
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
</style> 